<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OrientationAwareLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BottomButtonsLayout" parent="OrientationAwareLayout">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="ShrinkInLandscape">
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ScrollContainer">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="GoneInLandscape">
        <item name="android:visibility">gone</item>
    </style>
</resources>
